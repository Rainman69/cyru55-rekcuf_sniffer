<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="@color/white"
    tools:context=".one">

    <ToggleButton
        android:id="@+id/netstat"
        style="@style/toggleButton"
        android:layout_width="128px"
        android:layout_height="128px"
        android:background="@drawable/net_toggle_bg"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bgradius"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/netstat"
        >

        <EditText
            android:id="@+id/num1"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="3"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="2"
            android:text="1"
            android:importantForAutofill="no"
            android:hint="conc"/>

        <TextView
            android:id="@+id/text_r1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Concurrent"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/num2"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="3"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="5"
            android:importantForAutofill="no"
            android:hint="0"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/text_r1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Domain"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/num3"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="3"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="2"
            android:hint="0"
            android:importantForAutofill="no"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/text_r1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sent"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    </LinearLayout>

